rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products collection - authenticated users can read, only backend functions can write
    match /products/{productId} {
      allow read: if request.auth != null; // Authenticated users can read
      allow write: if false; // Only backend functions can write (using Admin SDK)
    }
    
    // Ingredient science collection - authenticated users can read, only backend functions can write
    match /ingredient_science/{ingredientId} {
      allow read: if request.auth != null; // Authenticated users can read
      allow write: if false; // Only backend functions can write (using Admin SDK)
    }
    
    // Quiz results - users can only read/write their own
    match /quizResults/{quizId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // User recommendations - users can only read/write their own
    match /users/{userId}/recommendations/{recommendationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Liked products - users can only read/write their own
    match /users/{userId}/likedProducts/{productId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profile - users can only read/write their own
    match /users/{userId}/profile {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Staged products queue - authenticated users can read, only backend functions can write
    match /staged_products/{stagedId} {
      allow read: if request.auth != null; // Authenticated users can read
      allow write: if false; // Only backend functions can write (using Admin SDK)
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

