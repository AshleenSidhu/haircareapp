rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Product images: authenticated users can read, only backend functions can write
    match /products/{productId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend functions can write (using Admin SDK)
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

